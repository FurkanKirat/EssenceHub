<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="807.2" prefWidth="973.6" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.essencehub.project.Controllers.Suggestions.SendSuggestionController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0">
         <children>
            <Label text="Send Suggestions" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefWidth="50.0" text="Title:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="titletextField" prefHeight="26.0" prefWidth="322.0" styleClass="menuTextField" />
         </children>
      </HBox>
      <VBox prefHeight="291.0" prefWidth="943.0" spacing="10.0">
         <children>
            <Label text="Your Suggestion" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="suggestionTextArea" prefHeight="200.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onMouseClicked="#sendSuggestionClicked" text="Send Suggestion" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <styleClass>
                  <String fx:value="menuButton" />
                  <String fx:value="hide" />
               </styleClass>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
