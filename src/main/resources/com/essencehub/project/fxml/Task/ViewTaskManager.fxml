<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.essencehub.project.Controllers.Task.ViewTaskManagerController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="-14.0" prefHeight="400" prefWidth="600" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="-14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="0.0">
            <!-- Header -->
            <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Viewing Tasks" />

            <!-- Task table -->
            <TableView fx:id="taskTable" prefHeight="300" prefWidth="580">
                <columns>
                    <!-- Employee name -->
                    <TableColumn fx:id="employeeNameColumn" prefWidth="150" text="Employee Name" />

                          <!-- Task title -->
                    <TableColumn fx:id="taskColumn" prefWidth="178.4000244140625" text="Assign Title" />

                    <!-- Task is done or not done -->
                    <TableColumn fx:id="statusColumn" prefWidth="132.79998779296875" text="Done / Not Done" />
               <TableColumn fx:id="employeeNameColumn1" prefWidth="227.99996948242188" text="Sender" />
                </columns>
            </TableView>

            <!-- İşlemler -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="deleteTaskButton" onAction="#deleteTask" text="Delete the task" />
            <Button mnemonicParsing="false" onAction="#openTask" text="View the Task" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
