<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.essencehub.project.Controllers.AssignTaskController">

   <!-- Title Label -->
   <Label alignment="CENTER" style="-fx-font-size: 36px; -fx-font-weight: bold;" text="Assign Task" />

   <!-- Receiver Selection -->
   <HBox spacing="10.0">
      <Label alignment="CENTER" prefHeight="35.0" prefWidth="150.0" style="-fx-font-size: 24px;" text="Receiver" />
      <ComboBox fx:id="comboTasks" prefHeight="40.0" prefWidth="400.0" promptText="Select a receiver" />
   </HBox>

   <!-- Task Title Input -->
   <HBox spacing="10.0">
      <Label alignment="CENTER" prefWidth="150.0" style="-fx-font-size: 18px;" text="Task Title:" />
      <TextField fx:id="titleTextField" prefHeight="40.0" prefWidth="400.0" promptText="Enter the task title" />
   </HBox>

   <!-- Task Description Label -->
   <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Task Description" />

   <!-- Task Description Input -->
   <TextArea fx:id="descriptionTextArea" prefHeight="150.0" prefWidth="550.0" promptText="Enter task details..." />
   <Button mnemonicParsing="false" onAction="#assignTask" prefHeight="26.0" prefWidth="147.0" text="Assign the Task">
      <font>
         <Font size="14.0" />
      </font>
   </Button>
</VBox>
