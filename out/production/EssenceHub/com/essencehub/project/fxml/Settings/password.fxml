<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="890.4" prefWidth="994.8" spacing="10.0" styleClass="second-color" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.essencehub.project.Controllers.Settings.PasswordController">
   <children>
      <Label text="Password" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefHeight="27.0" prefWidth="103.0" text="Password:" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="passwordTextField" prefHeight="26.0" prefWidth="716.0" styleClass="menuTextField" HBox.hgrow="NEVER" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
         <children>
            <Button fx:id="editPasswordButton" mnemonicParsing="false" onMouseClicked="#editPasswordButtonClicked" text="Edit Password" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <styleClass>
                  <String fx:value="hide" />
                  <String fx:value="menuButton" />
               </styleClass>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="50.0" right="30.0" top="30.0" />
   </padding>
</VBox>
